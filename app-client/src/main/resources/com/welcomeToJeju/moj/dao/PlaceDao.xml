<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.welcomeToJeju.moj.dao.PlaceDao">
  
  <resultMap type="Place" id="PlaceMap">
    <id column="place_no" property="no"/> 
    <result column="place_name" property="storeName"/>
    <result column="place_address" property="storeAddress"/>
    <result column="x_coord" property="xCoord"/>
    <result column="y_coord" property="yCoord"/>
    
    <association property="owner" javaType="User">
      <id column="owner_no" property="no"/>
      <result column="owner_email" property="email"/>
      <result column="owner_nickname" property="nickName"/>
    </association>
    
    <association property="theme" javaType="Theme">
      <id column="theme_no" property="no"/>
      <result column="theme_title" property="title"/>
    </association>
    
    <collection property="photos" ofType="Photo">
      <id column="place_photo_no" property="no"/>
      <result column="file_path" property="filePath"/>
    </collection>
    
    <collection property="comments" ofType="Comment">
      <id column="comment_no" property="no"/>
      <result column="comment" property="comment"/>
    </collection>
  </resultMap>
  
  <insert id="insert" parameterType="Place"
    useGeneratedKeys="true" keyColumn="place_no" keyProperty="no">
    insert into jeju_place(theme_no,place_name,place_address,x_coord,y_coord,user_no)
    values(#{theme.no},#{storeName},#{storeAddress},#{xCoord},#{yCoord},#{owner.no})
  </insert>
  
  <insert id="insertPhoto" parameterType="Map">
    insert into jeju_place_photo(place_no,photo_no,user_no)
    values(#{no},#{filePath},#{userNo})
  </insert>
  
  <insert id="insertCommnet" parameterType="Map">
    insert into jeju_place_comment(place_no,commnet_no,user_no)
    values(#{no},#{comment},#{userNo})
  </insert>
  
  <delete id="delete" parameterType="int">
    delete from jeju_place
    where place_no=#{no}
  </delete>
  
  <delete id="deletePhoto" parameterType="int">
    delete from jeju_place_photo
    where place_no=#{no}
  </delete>
  
  <delete id="deleteComment" parameterType="int">
    delete from jeju_place_comment
    where place_no=#{no}
  </delete>
  
  <select id="findAll" resultMap="PlaceMap">
  </select>
  
  <select id="findByThemeNo" resultMap="PlaceMap" parameterType="int">
  </select>
  
</mapper>
